<!DOCTYPE html>
<html>
<head>
  <title>akaja.me</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag 'application', 'http://fonts.googleapis.com/css?family=Raleway:400,700' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="sidebar">
    <div id="logo">
      <%= link_to root_path do %>
        <%= image_tag("myAvatar3.svg", width:'100') %>
      <% end %>
    </div>

    <ul>
      <li class="category">akaja.me</li>
      <li><%= link_to "About", about_path %></li>
      <li><%= link_to "Resume", resume_path %></li>
      <li><%= link_to "Blog", posts_path %></li>
    </ul>

    <ul>
      <li class="category">Contact</li>
      <li><a href="https://twitter.com/atkaja">Twitter</a></li>
      <li><a href="https://github.com/alexkaja">Github</a></li>
      <li><a href="https://www.linkedin.com/in/alexkaja">LinkedIn</a></li>
      <li><a href="mailto:akaja90@gmail.com">Email</a></li>
    </ul>
    <% if !user_signed_in? %>
      <p class="sign_in"><%= link_to "Admin Login", new_user_session_path %></p>
    <% end %>
  </div>

  <div id="main_content">
    <div id="header">
      <p>My Home on the Web <%= yield(:title) %></p>

      <% if user_signed_in? %>
        <div class="buttons">
          <button class="button"><%= link_to "New Post", new_post_path %></button>
          <button class="button"><%= link_to 'Log Out', destroy_user_session_path, method: :delete %></button>
        </div>
      <% end %>

    </div>

    <div class="flash_wrapper">

      <% flash.each do |name, msg| %>
        <%= content_tag(:div, msg, class: "flash_alert") %>
      <% end %>

    </div>

    <%= yield %>
  </div>

</body>
</html>
